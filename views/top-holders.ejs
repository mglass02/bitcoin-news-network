<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BNN - Top HODLers</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Alice&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/feather-icons"></script> 
</head>
<body>
    <header>
        <h1>BNN</h1>
    </header>

    <main>
        <h2>Top HODLers</h2>

        <!-- Grid to display the top holders -->
        <div class="holders-list">
            <!-- Loop through the holders array passed from the server -->
            <% holders.forEach(function(holder) { %>
                <div class="holder-card">
                    <h3><%= holder.name %></h3>
                    <p><strong>Total BTC:</strong> <span class="btc-amount"><%= holder.founded %></span></p>
                </div>
            <% }) %>
        </div>
    </main>

    <!-- Navigation -->
    <nav>
        <a href="/news" class="#"><i data-feather="file-text"></i></a>
        <a href="/" class="#"><i data-feather="home"></i></a>
        <a href="/top-holders" class="#"><i data-feather="dollar-sign"></i></a>
    </nav>

    <script>
        feather.replace();
    </script>
</body>
</html>
